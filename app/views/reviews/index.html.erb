<header id="content-header">
  <h1>Reviews for <%= link_to(@movie.title, @movie) %></h1>
</header>

<ul>
  <% @review.each do |review| %>
    <li>
      <p>
        <%= pluralize(review.stars, 'star') %> by <%= review.name %>:
      </p>
      <p>
        <%= review.comment %>
      </p>
      <p>
        <i><%= time_ago_in_words(review.created_at) %> ago</i>
      </p>
    </li>
  <% end %>
</ul>
